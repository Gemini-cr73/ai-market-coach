FROM python:3.11-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY . /app

# Azure App Service expects the container to listen on WEBSITES_PORT (we set 8000)
EXPOSE 8000

CMD ["bash","-lc","uvicorn app.api.main:app --host 0.0.0.0 --port ${PORT:-8000}"]
